@model Cadastro

@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Novo Cadastro</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Empresa</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Empresa" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefone Pessoal</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="TelefonePessoal" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefone Comercial</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="TelefoneComercial" />
                </div>
            </div>

             <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <a class="btn btn-primary btn-sm" asp-controller="Cadastros" asp-action="EmailCadastrar">E-mail</a>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Cadastros" asp-action="Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>